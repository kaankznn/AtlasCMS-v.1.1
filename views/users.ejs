<section class="page-head">
  <div>
    <p class="eyebrow">Users</p>
    <h1 class="page-title">Team directory</h1>
    <p class="muted">Manage access for editors and contributors.</p>
  </div>
</section>

<section class="card form-card">
  <form action="/dashboard/users/create" method="POST" class="stack">
    <div class="field-row">
      <div class="field">
        <label for="username">Username</label>
        <input id="username" name="username" class="input" placeholder="New User" required>
      </div>
      <div class="field">
        <label for="email">Email (optional)</label>
        <input id="email" name="email" type="email" class="input" placeholder="name@company.com">
      </div>
      <div class="field">
        <label for="password">Password</label>
        <input id="password" placeholder="Password" name="password" type="password" class="input" minlength="8" required>
      </div>
    </div>
    <% if (formError) { %>
      <div class="alert"><%= formError %></div>
    <% } %>
    <div class="form-actions">
      <button class="btn btn-primary" type="submit">Create user</button>
    </div>
  </form>
</section>

<section class="table-card">
  <table class="table">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Joined</th>
        <th class="table-actions">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (!users.length) { %>
        <tr>
          <td colspan="3" class="empty">No users found.</td>
        </tr>
      <% } %>
      <% users.forEach(u => { %>
        <tr>
          <td><strong><%= u.username %></strong></td>
          <td class="muted"><%= u.email || "-" %></td>
          <td class="muted">
            <%= u.created_at ? new Date(u.created_at).toLocaleDateString("en-GB") : "-" %>
          </td>
          <td class="table-actions">
            <form action="/dashboard/users/delete/<%= u.user_id %>" method="POST">
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
